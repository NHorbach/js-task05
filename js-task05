  function padIt (str, n) {
  if (n === 1) {
  return '*' + str; 
 } else if (n===2) {
    return '*' + str + '*';
 } else if (n===3) {
    return '**' + str + '*'; 
 } else if (n===4) {
    return '**' + str + '**'; 
}
}

